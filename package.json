{
  "name": "@authkitcom/core",
  "private": false,
  "version": "0.12.2",
  "description": "Core javascript AuthKit library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "test:watch": "jest --watch --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:authkitcom/authkit-javascript.git"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "auth",
    "oauth",
    "jwt"
  ],
  "author": "btomasini",
  "license": "MIT",
  "devDependencies": {
    "@fluffy-spoon/substitute": "^1.193.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@types/jest": "^26.0.20",
    "jest": "^26.6.3",
    "jest-localstorage-mock": "^2.4.7",
    "jest-mock-axios": "^4.3.0",
    "prettier": "^1.19.1",
    "ts-jest": "^26.5.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "@types/crypto-js": "^3.1.43",
    "@types/randombytes": "^2.0.0",
    "axios": "^0.19.0",
    "crypto-js": "^3.1.9-1",
    "query-string": "^6.9.0",
    "randombytes": "^2.1.0"
  }
}
