{
  "name": "@authkitcom/core",
  "private": false,
  "version": "0.13.11",
  "description": "Core javascript AuthKit library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepare": "yarn run compile",
    "prepublishOnly": "yarn test && yarn run lint",
    "preversion": "yarn run lint",
    "version": "yarn fix && git add -A src",
    "postversion": "git push && git push --tags",
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "test:watch": "jest --watch --config jestconfig.json",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "pretest": "yarn run compile",
    "posttest": "yarn run lint"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:authkitcom/authkit-javascript.git"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "auth",
    "oauth",
    "jwt"
  ],
  "author": "btomasini",
  "license": "MIT",
  "devDependencies": {
    "@fluffy-spoon/substitute": "^1.193.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.11.2",
    "eslint-plugin-prettier": "^4.2.1",
    "gts": "^3.1.1",
    "jest": "^26.6.3",
    "jest-localstorage-mock": "^2.4.7",
    "moq.ts": "^10.0.2",
    "prettier": "^1.19.1",
    "ts-jest": "^26.5.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~4.7.0"
  },
  "dependencies": {
    "@types/crypto-js": "^3.1.43",
    "@types/randombytes": "^2.0.0",
    "crypto-js": "^3.1.9-1",
    "query-string": "^6.9.0",
    "randombytes": "^2.1.0"
  }
}
